<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Recyclerview text view -->
    <style name="ItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Recyclerview text view bold -->
    <style name="ItemStyleBoldLarge" parent="ItemStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ItemStyleBoldSmall" parent="ItemStyleBoldLarge">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
