<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        style="@style/ItemStyleBoldLarge"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Secret Clover"/>

    <TextView
        android:id="@+id/item_artist"
        android:layout_width="0dp"
        style="@style/ItemStyleBoldSmall"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Yuiko/ Yuikonnu"/>

    <TextView
        android:id="@+id/item_path"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        style="@style/ItemStyle"
        app:layout_constraintTop_toBottomOf="@id/item_artist"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="sd card/music/Foxtail-Grass Studio/Secret Clover.mp3"/>

</androidx.constraintlayout.widget.ConstraintLayout>